---
// ForgotPasswordForm.astro - Componente de recuperación de contraseña
---
<div class="card w-full">
  <header>
    <h2>Reset your password</h2>
    <p>Enter your email address and we'll send you a link to reset your password</p>
  </header>
  <section>
    <form class="form grid gap-6">
      <div class="grid gap-2">
        <label for="forgot-email">Email</label>
        <input type="email" id="forgot-email" placeholder="Enter your email address" required>
      </div>
    </form>
  </section>
  <footer class="flex flex-col items-center gap-2">
    <button type="button" class="btn w-full">Send reset link</button>
    <div class="flex items-center gap-2 mt-4">
      <a href="/auth/login" class="text-sm text-center underline underline-offset-4 hover:text-primary">
        ← Back to login
      </a>
    </div>
  </footer>
</div>

<!-- Success message (initially hidden) -->
<div class="card w-full mt-4 bg-primary/5 border-primary/20 hidden" id="success-message">
  <div class="flex items-center gap-3">
    <div class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/10">
      <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>
    <div>
      <h3 class="font-semibold text-primary">Check your email</h3>
      <p class="text-sm text-muted-foreground">We've sent a password reset link to your email address.</p>
    </div>
  </div>
</div>
